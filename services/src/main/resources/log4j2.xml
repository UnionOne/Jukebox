<Configuration>
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>

        <RollingFile name="SERVER_LOGFILE" fileName="/logs/server.log"
                     filePattern="/logs/server-%d{MM-dd-yyyy}.log.gz">
            <PatternLayout>
                <Charset>UTF-8</Charset>
                <Pattern>%d %-5p [%t] %C{2} (%F:%L) - %m%n</Pattern>
            </PatternLayout>

            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>

            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="SERVER_LOGFILE"/>
        </Root>

        <Logger name="org.hibernate" level="INFO" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="SERVER_LOGFILE"/>
        </Logger>

        <Logger name="com.itibo.grob.services" level="INFO"
                additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="SERVER_LOGFILE"/>
        </Logger>

        <Logger name="org.springframework.context" level="INFO"
                additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="SERVER_LOGFILE"/>
        </Logger>

        <Logger name="org.springframework.test.context" level="WARN"
                additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="SERVER_LOGFILE"/>
        </Logger>
    </Loggers>
</Configuration>